<html>

<head>
    <title>Login and Registration Assignment</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO"
        crossorigin="anonymous">
    <style>
        #sizer{
            padding-left:4%;
            padding-right:4%;
            font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            }
        #JustLogin{
            border:3px solid navy;
            width: 38%;
            padding-left: 4%;
            padding-right: 4%;
            padding-top: 10px;
            display: inline-block;
            text-align: top;
            min-height: 400px;
            background-color: lightblue;
        }
        #LoginReg{
            border:3px solid navy;
            width: 38%;
            padding-left: 4%;
            padding-right: 4%;
            padding-top: 10px;
            min-height: 400px;
            display: inline-block;
            vertical-align: top;
            background-color:bisque ;
        }
        p.error{
            color:indigo;
            font-weight: bold;
        }
      </style>
    <!-- <link rel="stylesheet" type="text/css" href="{{ url_for('static', filename="CSS_folder/Warren_CSS.css")}}">
      <link rel="stylesheet" type="text/javascript" href="{{ url_for('static', filename="JS_folder/Warrens_JavaScript.js")}}"> -->
</head>
<div class="container">

    <body>
        <div id="sizer">
            <h1>Login and Registration Assignment</h1>
            <!-- tip to easily see objects printed in full instead of [object Object] -->
            <!-- <%- JSON.stringify(messages) %> -->
            <!-- based on the structure of your messages, determine how to display them -->

            <% if(messages.registration) { %>
            <% for (var x of messages.registration) { %>
            <h3>
                <%= x %>
            </h3>
            <% } %>
            <% } %>
            <div id="LoginReg">
                <h2>Register Here</h2>
                <form action="/registration" method="post">
                    <div class="form-group">
                        <label for="formGroupExampleInput">First Name</label>
                        <br>
                        <input type="text" class="form-control" name="first_name">
                    </div>
                    <div class="form-group">
                        <label for="formGroupExampleInput">Last Name</label>
                        <br>
                        <input type="text" class="form-control" name="last_name">
                    </div>
                    <div class="form-group">
                        <label for="formGroupExampleInput">Email</label>
                        <br>
                        <input type="email" class="form-control" name="email">
                    </div>
                    <div class="form-group">
                        <label for="formGroupExampleInput">Password</label>
                        <br>
                        <input type="password" class="form-control" name="password">
                    </div>
                    <div class="form-group">
                        <label for="formGroupExampleInput">Birth Date</label>
                        <br>
                        <input type="date" class="form-control" name="birth_date">
                    </div>
                    <br>
                    <div class="form-group">
                        <input type="submit" value="Registerr!" />
                    </div>
                </form>
            </div>
            <div id="JustLogin">
                <h2>Login Here</h2>
                <form action="/login" method="post">
                    <div class="form-group">
                        <label for="formGroupExampleInput">E-mail</label>
                        <br>
                        <input type="text" class="form-control" name="email">
                    </div>
                    <div class="form-group">
                        <label for="formGroupExampleInput">Password</label>
                        <br>
                        <input type="text" class="form-control" name="password">
                    </div>
                    <br>
                    <input type="submit" value="Login!" />
                </form>
            </div>
        </div>
</div>
</body>

</html>